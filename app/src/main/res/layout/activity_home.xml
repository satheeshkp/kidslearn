<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/bt_shape_detection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Shape Detection"
            />

        <Button
            android:id="@+id/bt_color_detection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Color Detection"
            />

        <Button
            android:id="@+id/bt_color_tracker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Color Tracker"
            />

        <Button
            android:id="@+id/bt_number_recog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Number Recognition"
            />
        <Button
            android:id="@+id/bt_classifier"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Image Classifier"
            />

        <Button
            android:id="@+id/bt_invisible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Invisible Cloak" />

        <Button
            android:id="@+id/bt_motiondetect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Motion Detection" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>